<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="8dp"
        card_view:cardElevation="10dp"
        card_view:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/customName"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/avatar"
                android:gravity="left"
                android:text="TextView"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customNumber"
                android:layout_width="239dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/avatar"
                android:layout_marginStart="38dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginBottom="0dp"
                android:layout_toStartOf="@+id/chkbox"
                android:layout_toEndOf="@+id/avatar"
                android:paddingLeft="15dp"
                android:text="number"
                android:textSize="18dp" />

            <ImageView

                android:id="@+id/avatar"
                android:layout_width="65dp"
                android:layout_height="66dp"
                android:layout_alignTop="@+id/customName"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="0dp"
                android:maxHeight="60dp"
                android:padding="2dp"
                app:srcCompat="@drawable/avatar"
                tools:layout_height="@android:dimen/notification_large_icon_height" />

            <CheckBox
                android:id="@+id/chkbox"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_below="@+id/customName"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:clickable="true"
                android:elevation="5dp"
                android:visibility="visible" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
